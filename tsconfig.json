{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "strictMetadataEmit": false
  },
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "bootstrap",
      "datatables.net",
      "jasmine",
      "jasminewd2",
      "jquery",
      "node",
      "jquery.slimscroll"
    ],
    "lib": [
      "es2017",
      "es2016",
      "dom",
      "es6",
      "esnext"
    ],
    "skipLibCheck": true
  },
  "include": [
    "main.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}